{
  "name": "nba-highlights-backend",
  "version": "1.0.0",
  "description": "NBA Highlights API Server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "migrate": "node-pg-migrate up",
    "migrate:down": "node-pg-migrate down",
    "migrate:create": "node-pg-migrate create",
    "db:seed": "ts-node src/db/seed.ts",
    "db:test": "ts-node src/db/test-connection.ts",
    "sync:schedule": "ts-node src/scripts/sync-schedule.ts",
    "sync:videos": "ts-node src/scripts/discover-videos.ts"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "helmet": "^8.0.0",
    "node-cron": "^3.0.3",
    "node-pg-migrate": "^7.7.0",
    "pg": "^8.13.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.1",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.11.10",
    "eslint": "^9.15.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.15.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
